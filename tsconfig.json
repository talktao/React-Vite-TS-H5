{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      // 根据别名配置相关路径
      "@/api/*": [
        "./src/api/*"
      ],
      "@/component/*": [
        "./src/component/*"
      ],
      "@/images/*": [
        "./src/images/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/router/*": [
        "./src/router/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/type/*": [
        "./src/type/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}